      "defaultRange": [0.046, 1000.0],
      "absoluteRange": [0.046, 10000.0],
      "scalingDefault": "linear",
      "specialCases": {
        "sampleRateDependentMinimum": true,
        "minimumFormula": "1000 / sampleRateHz"
      }
