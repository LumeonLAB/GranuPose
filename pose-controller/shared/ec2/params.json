      "defaultRange": [0.1, 100.0],
      "absoluteRange": [0.0, 500.0],
      "scalingDefault": "log",
      "specialCases": {
        "notes": ["Log scaling is recommended for musical control."]
      }
    },
    {
      "id": "asynchronicity",
      "label": "Asynchronicity",
      "group": "timing",
      "unit": "normalized",
      "defaultValue": 0.0,
      "defaultRange": [0.0, 1.0],
      "absoluteRange": [0.0, 1.0],
      "scalingDefault": "linear",
      "specialCases": {}
    },
    {
      "id": "intermittency",
      "label": "Intermittency",
      "group": "timing",
      "unit": "normalized",
      "defaultValue": 0.0,
      "defaultRange": [0.0, 1.0],
      "absoluteRange": [0.0, 1.0],
      "scalingDefault": "linear",
      "specialCases": {}
    },
    {
