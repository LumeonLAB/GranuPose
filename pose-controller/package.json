{
  "name": "pose-controller",
  "version": "1.0.0",
  "description": "Granular Synth Pose Controller",
  "main": "electron/main.cjs",
  "private": true,
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron electron/main.cjs",
    "dev:bridge": "node bridge/server.cjs",
    "dev:hosted": "concurrently -k \"vite --host 0.0.0.0 --port 5173\" \"node bridge/server.cjs\"",
    "bridge:start": "node bridge/server.cjs",
    "build": "npm run build:frontend",
    "build:frontend": "tsc -b && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "docker:up": "docker compose --profile prod up --build",
    "docker:up:dev": "docker compose --profile dev up --build",
    "docker:down": "docker compose down"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "mediapipe",
    "osc",
    "midi"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@mediapipe/tasks-vision": "^0.10.32",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "jzz": "^1.9.6",
    "osc": "^2.4.5",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "ws": "^8.19.0",
    "zod": "^4.3.6",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.1.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.4.1",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vite": "^7.3.1",
    "wait-on": "^9.0.4"
  }
}
