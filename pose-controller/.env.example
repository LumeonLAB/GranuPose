# Host-facing ports
WEB_PORT=8080
BRIDGE_PORT=8787

# EC2 target for OSC relay
OSC_TARGET_HOST=host.docker.internal
OSC_TARGET_PORT=16447
OSC_CHANNEL_PREFIX=/pose/out
CHANNEL_COUNT=16
MAX_MESSAGES_PER_SECOND=60

# Optional EC2 telemetry ingest (engine-accurate scan + active grains)
TELEMETRY_LISTEN_HOST=0.0.0.0
TELEMETRY_LISTEN_PORT=16448
TELEMETRY_SCAN_ADDRESS=/ec2/telemetry/scan

# Security
ALLOWED_ORIGIN=*

# Optional frontend env for non-proxied dev runs
VITE_OUTPUT_MODE=bridge
VITE_BRIDGE_WS_URL=ws://localhost:8787/ws
